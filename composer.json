{
  "name": "morozov/kih",
  "description": "RSS generator for Шоу Кремова и Хрусталёва",
  "license": "MIT",
  "authors": [
    {
      "name": "Sergei Morozov",
      "email": "morozov@tut.by"
    }
  ],
  "config" : {
    "platform": {
      "php": "7.2.0"
    }
  },
  "require": {
    "php": "^7.2",
    "ext-dom": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "guzzlehttp/guzzle": "^6",
    "slim/slim": "^3.0"
  },
  "require-dev": {
    "doctrine/coding-standard": "^5.0",
    "infection/infection": "^0.10",
    "phan/phan": "^2.2",
    "phpstan/phpstan": "^0.11",
    "phpstan/phpstan-phpunit": "^0.11",
    "phpunit/phpunit": "^8.3",
    "squizlabs/php_codesniffer": "^3.3",
    "vimeo/psalm": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "KiH\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KiH\\Tests\\": "tests/"
    }
  }
}
